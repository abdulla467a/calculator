<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="7"
    tools:context=".MainActivity">
    <TextView
        android:id="@+id/firstTextViewId"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="7dp"
        android:background="@android:color/holo_blue_bright"
        android:textSize="25dp"
        android:gravity="right"/>

    <TextView
        android:id="@+id/secondTextViewId"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/purple_200"
        android:gravity="right"
        android:text="0"
        android:textSize="38dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="4"
        android:orientation="horizontal">

        <Button

            android:layout_margin="7dp"
            android:background="@color/red_2002"
            android:id="@+id/CEButtonId"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="CE"
            android:textSize="35dp"/>

        <Button
            android:layout_margin="7dp"
            android:background="@color/red_2002"
            android:id="@+id/CButtonid"
            android:onClick="clearFunction"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="C"
            android:textSize="35dp"/>

        <Button
            android:id="@+id/percentButtonid"
            android:layout_margin="7dp"
            android:background="@color/red_2002"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="%"
            android:textSize="35dp"
            android:layout_width="0dp" />

        <Button
            android:layout_margin="7dp"
            android:background="@color/red_2002"
            android:id="@+id/deleteButtonid"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="D"
            android:textSize="35dp"/>

    </LinearLayout>


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="4"
        android:orientation="horizontal">

        <Button
            android:layout_margin="7dp"
            android:background="@color/red_2002"
            android:id="@+id/sevenButtonId"
            android:onClick="digitFunction"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="7"
            android:textSize="35dp"/>

        <Button
            android:layout_margin="7dp"
            android:background="@color/red_2002"
            android:onClick="digitFunction"
            android:id="@+id/eightuttonid"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="8"
            android:textSize="35dp"/>

        <Button
            android:onClick="digitFunction"
            android:id="@+id/nineButtonid"
            android:layout_margin="7dp"
            android:background="@color/red_2002"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="9"
            android:textSize="35dp"
            android:layout_width="0dp" />

        <Button
            android:layout_margin="7dp"
            android:background="@color/red_2002"
            android:id="@+id/divButtonid"
            android:onClick="logicFunction"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="/"
            android:textSize="35dp"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="4"
        android:orientation="horizontal">

        <Button
            android:layout_margin="7dp"
            android:background="@color/red_2002"
            android:onClick="digitFunction"
            android:id="@+id/fourButtonId"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="4"
            android:textSize="35dp"/>

        <Button
            android:layout_margin="7dp"
            android:background="@color/red_2002"
            android:onClick="digitFunction"
            android:id="@+id/fiveButtonid"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="5"
            android:textSize="35dp"/>

        <Button
            android:onClick="digitFunction"
            android:id="@+id/sixButtonid"
            android:layout_margin="7dp"
            android:background="@color/red_2002"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="6"
            android:textSize="35dp"
            android:layout_width="0dp" />

        <Button
            android:id="@+id/multiButtonid"
            android:onClick="logicFunction"
            android:layout_margin="7dp"
            android:background="@color/red_2002"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="*"
            android:textSize="35dp"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="4"
        android:orientation="horizontal">

        <Button
            android:id="@+id/oneButtonId"
            android:layout_width="0dp"
            android:layout_height="101dp"
            android:layout_margin="7dp"
            android:layout_weight="1"
            android:background="@color/red_2002"
            android:onClick="digitFunction"
            android:text="1"
            android:textSize="35dp" />

        <Button
            android:layout_margin="7dp"
            android:background="@color/red_2002"
            android:onClick="digitFunction"
            android:id="@+id/twoButtonid"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="2"
            android:textSize="35dp"/>

        <Button
            android:onClick="digitFunction"
            android:id="@+id/threeButtonid"
            android:layout_margin="7dp"
            android:background="@color/red_2002"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="3"
            android:textSize="35dp"
            android:layout_width="0dp" />

        <Button
            android:id="@+id/subButtonid"
            android:onClick="logicFunction"
            android:layout_margin="7dp"
            android:background="@color/red_2002"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="-"
            android:textSize="35dp"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="4"
        android:orientation="horizontal">

        <Button
            android:layout_margin="7dp"
            android:background="@color/red_2002"
            android:onClick="digitFunction"
            android:id="@+id/zeroButtonId"
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="0"
            android:textSize="35dp" />

        <Button
            android:id="@+id/pointButtonid"
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:layout_margin="7dp"
            android:layout_weight="1"
            android:background="@color/red_2002"
            android:onClick="digitFunction"
            android:text="."
            android:textSize="35dp" />

        <Button
            android:id="@+id/resultButtonid"
            android:onClick="resultButton"
            android:layout_margin="7dp"
            android:background="@color/red_2002"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="="
            android:textSize="35dp" />

        <Button
            android:id="@+id/addButtonid"
            android:onClick="logicFunction"
            android:layout_margin="7dp"
            android:background="@color/red_2002"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="+"
            android:textSize="35dp"/>

    </LinearLayout>









</LinearLayout>